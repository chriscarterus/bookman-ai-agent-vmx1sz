{
  "compilerOptions": {
    // ECMAScript Target and Features
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    
    // Module Resolution
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    // JavaScript Support
    "allowJs": false,
    "skipLibCheck": true,
    
    // Build Options
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    
    // React Support
    "jsx": "react-jsx",
    
    // Type Definitions
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ]
  },
  
  // Project Files
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vite.config.ts",
    "jest.config.ts"
  ],
  
  // Excluded Files/Folders
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".docker"
  ],
  
  // Project References
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}