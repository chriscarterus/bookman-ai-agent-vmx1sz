# API Configuration
# Base URL for backend API services (required)
# Example: https://api.bookman.ai
VITE_API_BASE_URL=http://localhost:3000

# API request timeout in milliseconds (optional)
# Must be a positive integer
# Default: 30000
VITE_API_TIMEOUT=30000

# Authentication Configuration
# Authentication service domain (required)
# Example: auth.bookman.ai
VITE_AUTH_DOMAIN=auth.bookman.ai

# OAuth 2.0 client identifier (required)
# Must be a valid OAuth client ID
# Example: abcdef123456
VITE_AUTH_CLIENT_ID=your_client_id_here

# OAuth 2.0 client secret (required)
# Must be kept secure and never committed to version control
VITE_AUTH_CLIENT_SECRET=your_client_secret_here

# Theme Configuration
# Default application theme mode (optional)
# Valid values: 'light' | 'dark'
# Default: 'light'
VITE_DEFAULT_THEME=light

# Real-time Configuration
# WebSocket endpoint for real-time market data (required)
# Example: wss://ws.bookman.ai
VITE_WEBSOCKET_URL=ws://localhost:3001

# WebSocket connection timeout in milliseconds (optional)
# Default: 10000
VITE_WEBSOCKET_TIMEOUT=10000

# Analytics and Monitoring
# Enable/disable analytics tracking (optional)
# Valid values: 'true' | 'false'
# Default: 'false'
VITE_ENABLE_ANALYTICS=false

# Application logging level (optional)
# Valid values: 'debug' | 'info' | 'warn' | 'error'
# Default: 'info'
VITE_LOG_LEVEL=info

# Security Configuration
# API key for additional security (required in production)
# Must be a valid API key string
VITE_API_KEY=your_api_key_here

# Content Security Policy configuration (optional)
# Default: 'self'
VITE_CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';

# Feature Flags
# Enable/disable experimental features (optional)
# Valid values: 'true' | 'false'
# Default: 'false'
VITE_ENABLE_EXPERIMENTAL=false

# Cache Configuration
# Cache duration in seconds (optional)
# Default: 3600
VITE_CACHE_DURATION=3600

# Performance Monitoring
# Enable/disable performance monitoring (optional)
# Valid values: 'true' | 'false'
# Default: 'true'
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Error Reporting
# Error reporting service URL (optional)
# Example: https://errors.bookman.ai
VITE_ERROR_REPORTING_URL=

# Development Tools
# Enable/disable development tools (optional)
# Valid values: 'true' | 'false'
# Default: 'false'
VITE_ENABLE_DEV_TOOLS=false